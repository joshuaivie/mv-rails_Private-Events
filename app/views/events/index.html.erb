<div class="mb-4">
  <h3>Events</h3>
</div>
<div class="d-flex align-items-start">
  <div class="nav flex-column nav-pills me-3" id="events_tab" role="tablist" aria-orientation="vertical">
    <button class="nav-link mb-2 active" id="upcomming_events_tab" data-bs-toggle="pill" data-bs-target="#upcoming_events" type="button" role="tab" aria-controls="upcoming-events" aria-selected="true">Upcoming Events</button>
    <button class="nav-link" id="past_events_ab" data-bs-toggle="pill" data-bs-target="#past_events" type="button" role="tab" aria-controls="past-events" aria-selected="false">Past Events</button>
  </div>
  <div class="tab-content" id="events_tabContent">
    <div class="tab-pane fade show active" id="upcoming_events" role="tabpanel" aria-labelledby="upcoming-events">
      <ul class="events-container">
        <% @events.each do |event| %>
          <li class="event-list-item">
            <div class="event-date-container">
              <div class="event-date">
                <div class="event-month">
                  <%= event.date.strftime('%b')%>
                </div>
                <div class="event-day">
                  <%= event.date.strftime('%-d')%>
                </div>
              </div>
            </div>
            <div class="event-content">
              <div class="event-title mb-3">
                <%= event.title %>
              </div>
              <div class="event-details d-flex">
                <div class="event-location me-3"><i class="fas fa-location-arrow fa-fw"></i><%= event.location %></div>
                <div class="event-time me-3"><i class="fas fa-clock fa-fw"></i><%= event.date.strftime('%A %l:%M %p')%></div>
                <div class="event-organizer me-3"><i class="fas fa-user-circle fa-fw"></i>Oraganizer: <%= event.creator.fullname %></div>
              </div>
              <div class="event-description">
                <%= event.description %>
              </div>
              <div class="event-buttons">
                <div class="btn btn-sm btn-primary register me-2">Attend</div>
                <div class="btn btn-sm btn-primary cancel me-2">Cancel Registration</div>
                <%= link_to 'More Information', event, class: 'btn btn-sm btn-primary more-info me-2' %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="tab-pane fade" id="past_events" role="tabpanel" aria-labelledby="past-events">...</div>
  </div>
</div>
