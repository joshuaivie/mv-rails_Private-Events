<div class="mb-4">
  <h3>Events</h3>
</div>
<div class="d-flex align-items-start">
  <div class="nav flex-column nav-pills me-3" id="events_tab" role="tablist" aria-orientation="vertical">
    <button class="nav-link mb-2 active" id="upcomming_events_tab" data-bs-toggle="pill" data-bs-target="#upcoming_events" type="button" role="tab" aria-controls="upcoming-events" aria-selected="true">Upcoming Events</button>
    <button class="nav-link" id="past_events_ab" data-bs-toggle="pill" data-bs-target="#past_events" type="button" role="tab" aria-controls="past-events" aria-selected="false">Past Events</button>
  </div>
  <div class="tab-content" id="events_tabContent">
    <div class="tab-pane fade show active" id="upcoming_events" role="tabpanel" aria-labelledby="upcoming-events">
      <ul class="events-container">
        <%= show_events(@upcoming_events, {:event_state => "upcoming_event", :display_type => "list"})%>
      </ul>
    </div>
    <div class="tab-pane fade" id="past_events" role="tabpanel" aria-labelledby="past-events">
      <ul class="events-container">
        <%= show_events(@past_events, {:event_state => "past_event", :display_type => "list"})%>
      </ul>
    </div>
  </div>
</div>
